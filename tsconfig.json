{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "coverage", "build", "src/test"],
    "include": ["./**/*.ts"]
}